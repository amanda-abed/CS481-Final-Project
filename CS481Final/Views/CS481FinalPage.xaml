<?xml version="1.0" encoding="utf-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea="true"
    xmlns:local="clr-namespace:CS481Final"
	x:Class="CS481Final.Views.CS481FinalPage"
    BackgroundImage="homebackground.png"
    NavigationPage.HasNavigationBar="false">
	<StackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Padding="0,-100,0,0">
        <Label
            Text="Split With Friends!"
            FontAttributes="Bold"
            FontSize="35"
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center"
            TextColor="White"/>
        <BoxView
            HeightRequest="40"
            />
         <Button
            Text="Logs"
            Command="{Binding NavToLogPageCommand}"
            TextColor="White"
            FontAttributes="Bold"
            BorderColor="Transparent"
            HeightRequest="20"/> 
         <BoxView 
            HeightRequest="1"
            WidthRequest="65"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="EndAndExpand"
            Color="Black"/>
        <BoxView
            HeightRequest="10"
            />
        <Button
            Text="Add Item"
            Command="{Binding NavToAddItemPageCommand}"
            TextColor="White"
            FontAttributes="Bold"
            BorderColor="Transparent"
            HeightRequest="20"/> 
        <BoxView 
            HeightRequest="1"
            WidthRequest="100"
            HorizontalOptions="Center"
            VerticalOptions="EndAndExpand"
            Color="Black" />
    </StackLayout>
</ContentPage>
