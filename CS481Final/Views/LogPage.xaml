<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:prismBehaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    ios:Page.UseSafeArea="true"
	x:Class="CS481Final.Views.LogPage"
    Title = "{Binding Title}">
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand">
            <ListView
                ItemsSource="{Binding Item}"
                SelectedItem="{Binding SelectedItem}">
                <ListView.Behaviors>
                    <prismBehaviors:EventToCommandBehavior
                        EventName="ItemSelected"
                        Command="{Binding ItemSelected}"
                        EventArgsParameterPath="SelectedItem"/>
                </ListView.Behaviors>
                <ListView.Header>
                    <Grid
                        Padding="20,0,0,-20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="7"/>
                    </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="Total Amount Due:"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="Bill Due Date:"/>
                        <DatePicker
                            IsVisible="true"
                            Grid.Row="1"
                            Grid.Column="1"
                            MinimumDate="{x:Static sys:DateTime.Now}"
                            Date="{Binding DateSelectedCommand}"
                            />
                        <Button
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="Set"
                            Command="{Binding SetDate}"/>
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell
                            Text="{Binding Total}"/> 
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
