<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:prismBehaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    ios:Page.UseSafeArea="true"
	x:Class="CS481Final.Views.LogPage"
    Title = "{Binding Title}">
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand">
            <ListView
                ItemsSource="{Binding Item}"
                SelectedItem="{Binding SelectedItem}">
                <ListView.Behaviors>
                    <prismBehaviors:EventToCommandBehavior
                        EventName="ItemSelected"
                        Command="{Binding ItemSelected}"
                        EventArgsParameterPath="SelectedItem"/>
                </ListView.Behaviors>
                <ListView.Header>
                    <Grid
                        Padding="20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="Total Amount Due:"/>
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="Select Bill Due Date:"/>
                        <DatePicker
                            Grid.Row="1"
                            Grid.Column="1"
                            DateSelected="Handle_DateSelected"
                            />
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell
                            Text="{Binding Total}"/> 
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
